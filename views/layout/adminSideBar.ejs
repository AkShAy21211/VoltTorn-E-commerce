<style>
    .tooltip-inner {
      max-width: 300px;  /* Adjust the maximum width as needed */
      font-size: 20px;  /* Adjust the font size as needed */
    }
  
  </style>
  <script>
    $(document).ready(function () {
      $('.tooltip-item').click(function () {
        // Toggle the 'active-menu-item' class for the clicked item
        $(this).toggleClass('active-menu-item');
  
        // Remove 'active-menu-item' class from other siblings
        $(this).siblings().removeClass('active-menu-item');
  
        // Remove 'active-link' class from other siblings
        $(this).siblings().removeClass('active-link');
  
        // Add 'active-link' class to the clicked link's parent li
        $(this).parent().addClass('active-link');
      });
  
      $('.tooltip-item').mouseover(function (e) {
        var tooltip = $(this).find('[data-toggle="tooltip"]');
        tooltip.css({
          top: e.clientY + 10,  // 10 pixels below the mouse pointer
          left: e.clientX + 10,
        });
        tooltip.tooltip('show');
      });
  
      $('.tooltip-item').mouseout(function () {
        $(this).find('[data-toggle="tooltip"]').tooltip('hide');
      });
    });
  </script>