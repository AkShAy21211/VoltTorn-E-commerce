<%- include('../layout/header.ejs') %>
<style>
  
  div.product-image{
    position: relative;
    width: 40%;

  }



  div.product-image img{
    width: 100%;
    height: auto;
  }
  .magnifier-lens{
    position: absolute;
    top: 0;
    left: 0;
    width: 150px;
    height: 100px;
    background-color: #ff980030;
    border: .1px solid var(--orange);
    opacity: 0;
  }
  .magnifier-lens.active{
   
    opacity: 1;

  }
  .magnified-image{
    position: absolute;
    width: 100%;
    height: 80vh;
    border: 2px solid  #ff9800;
    transform: scale(0.5);
    opacity: 0;
    transition: opacity .5s, transform.5s;


  }
  .magnified-image.active{
   opacity: 1;
   transform: scale(1);


  }
</style>


<link rel="stylesheet" href="/css/review.css">
  <section class="py-5">
    <div class="container mt-md-4 mt-sm-5 pt-sm-5 pt-5 mt-4 pt-md-4">

      <div class="row gx-5">
        <aside class="col-lg-6">
          <div class="border rounded-4 mb-3 d-flex justify-content-center">

            <img id="largeImage" style="width: 100%; height: 80vh; margin: auto" class="rounded-4 fit border product-image"
            src="/images/productImages/<%=ProductData.image[0]  %>" data-image="/images/productImages/<%=ProductData.image[0]  %>"/>
            <div class="magnifier-lens"></div>
          </div>



          <div class="d-flex justify-content-evenly mb-3   h-50 flex-wrap">
            <img width="150" height="150" class="rounded-2 border"
                 src="/images/productImages/<%=ProductData.image[1]  %>" data-image="/images/productImages/<%=ProductData.image[1]  %>" />
  
            <img width="150" height="150" class="rounded-2 border"
                 src="/images/productImages/<%=ProductData.image[2]  %>" data-image="/images/productImages/<%=ProductData.image[2]  %>" />
  
            <img width="150" height="150" class="rounded-2 border"
                 src="/images/productImages/<%=ProductData.image[3]  %>" data-image="/images/productImages/<%=ProductData.image[3]  %>" />
          </div>


        </aside>

        <main class="col-lg-6" style="position: relative;">

          <div  class="magnified-image"></div>

          <div class="ps-lg-3">
            
            <h4 class="title text-dark mt-5 mt-xl-0 mt-md-0">
              
              <%=ProductData.name %>
            </h4>
            <div class="d-flex flex-row my-3">
              <div class="text-warning mb-1 me-2">
                <!-- <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i> -->
                <i class="fas fa-star-half-alt"></i>
                <span class="ms-1"> 4.5 </span>
              </div>
              <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 orders</span>
              <%if(ProductData.stock !==0){%>
                <span class="text-success fw-bold ms-2">
                  In Stock
                </span>
                <% }else{%>
                  <span class="text-danger fw-bold ms-2">
                    Out Of Stock
                  </span>
                  <%}%>
            </div>

            <div class="mb-3 d-flex ">
              <span class="h4"> Rs:<%= Number(ProductData.price - (ProductData.price * (ProductData.discount/100))).toLocaleString() %>
              <span style=" margin-left: 30px;" class="h5 fw-light  text-danger"><s>
                 <%=ProductData.price  %>
                </s></span>
              <!-- Number(ProductData.price) converts the price to a number (in case it's a string), 
            and then toLocaleString() is used to format the number with commas for thousands.          -->
            
            </div>

            <ul>
              <% 
                var descriptionPoints = ProductData.description.split(/\.\s+/);
                descriptionPoints.forEach(function(point) {
              %>
                  <li><%= point %></li>
              <%
                });
              %>
            </ul>
            
               <hr />

            <div class="row mb-4">
              <label class="mb-2 d-block">Quantity</label>
            
              <div class="col-md-4 col-6 mb-3 d-flex">

                <div class="input-group mb-3" style="width: 170px">
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon1"
                    data-mdb-ripple-color="dark">
                    <i class="fas fa-minus"></i>
                  </button>
                  <input type="text" class="form-control text-center border border-secondary" placeholder="14"
                    aria-label="Example text with button addon" aria-describedby="button-addon1" />
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon2"
                    data-mdb-ripple-color="dark">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>

              </div>

            </div>
            <button class="btn btn-primary">Add To Cart</button>
            <button class="btn btn-warning ml-2">Buy Now</button>

          </div>

        </main>
      </div>
    </div>
  </section>


 <script>
  document.addEventListener("DOMContentLoaded", function () {
    // Get references to the large and smaller images
    const largeImage = document.getElementById("largeImage");
    const smallerImages = document.querySelectorAll('.rounded-2.border');

    // Add click event listener to each smaller image
    smallerImages.forEach(function (smallerImage) {
      smallerImage.addEventListener("click", function () {
        // Store the current large image source
        const originalLargeImageSrc = largeImage.src;

        // Store the current data-image attribute of the large image
        const originalLargeImageDataImage = largeImage.getAttribute("data-image");

        // Update the source attribute of the large image with the clicked small image
        largeImage.src = smallerImage.getAttribute("data-image");
        // Update the data-image attribute of the large image with the clicked small image data-image
        largeImage.setAttribute("data-image", smallerImage.getAttribute("data-image"));

        // Update the source attribute of the clicked small image with the original large image
        smallerImage.src = originalLargeImageSrc;
        // Update the data-image attribute of the clicked small image with the original large image data-image
        smallerImage.setAttribute("data-image", originalLargeImageDataImage);
      });
    });
  });

</script>
