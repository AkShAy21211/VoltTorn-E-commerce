<link rel="stylesheet" href="/css/review.css">
  <section class="py-5">
    <div class="container mt-md-4 mt-sm-5 pt-sm-5 pt-5 mt-4 pt-md-4">

      <div class="row gx-5">
        <aside class="col-lg-6">
          <div class="border rounded-4 mb-3 d-flex justify-content-center">


            <img style="max-width: 100%; max-height: 100vh; margin: auto" class="rounded-4 fit border"
              src="/images/productImages/<%=ProductData.image[0]  %>" />
          </div>
          <div class="d-flex justify-content-evenly mb-3   h-50 flex-wrap">
            <img width="150" height="150" class="rounded-2 border"
              src="/images/productImages/<%=ProductData.image[1]  %>" />

            <img width="150" height="150" class="rounded-2 border"
              src="/images/productImages/<%=ProductData.image[2]  %>" />

            <img width="150" height="150" class="rounded-2 border-solid mt-3 mt-lg-0 mt-xl-0 mt-md-0 "
              src="/images/productImages/<%=ProductData.image[3]  %>" />


          </div>


        </aside>

        <main class="col-lg-6">
          <div class="ps-lg-3">
            <h4 class="title text-dark">
              <%=ProductData.name %>
            </h4>
            <div class="d-flex flex-row my-3">
              <div class="text-warning mb-1 me-2">
                <!-- <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i> -->
                <i class="fas fa-star-half-alt"></i>
                <span class="ms-1"> 4.5 </span>
              </div>
              <span class="text-muted"><i class="fas fa-shopping-basket fa-sm mx-1"></i>154 orders</span>
              <%if(ProductData.stock !==0){%>
                <span class="text-success fw-bold ms-2">
                  In Stock
                </span>
                <% }else{%>
                  <span class="text-danger fw-bold ms-2">
                    Out Of Stock
                  </span>
                  <%}%>
            </div>

            <div class="mb-3 d-flex ">
              <span class="h4">Rs: <%= Number(ProductData.price).toLocaleString() %></span>
              <span style=" margin-left: 30px;" class="h5 fw-light  text-danger"><s>
                  <%= ProductData.price %>
                </s></span>
              <!-- Number(ProductData.price) converts the price to a number (in case it's a string), 
            and then toLocaleString() is used to format the number with commas for thousands.          -->
            </div>

            <p>
              <%=ProductData.description %>
            </p>

            <div class="row">
              <dt class="col-3">Type:</dt>
              <dd class="col-9">Regular</dd>

              <dt class="col-3">Color</dt>
              <dd class="col-9">Brown</dd>

              <dt class="col-3">Material</dt>
              <dd class="col-9">Cotton, Jeans</dd>

              <dt class="col-3">Brand</dt>
              <dd class="col-9">Reebook</dd>
            </div>

            <hr />

            <div class="row mb-4">
              <label class="mb-2 d-block">Quantity</label>
              <!-- col.// -->
              <div class="col-md-4 col-6 mb-3 d-flex">

                <div class="input-group mb-3" style="width: 170px">
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon1"
                    data-mdb-ripple-color="dark">
                    <i class="fas fa-minus"></i>
                  </button>
                  <input type="text" class="form-control text-center border border-secondary" placeholder="14"
                    aria-label="Example text with button addon" aria-describedby="button-addon1" />
                  <button class="btn btn-white border border-secondary px-3" type="button" id="button-addon2"
                    data-mdb-ripple-color="dark">
                    <i class="fas fa-plus"></i>
                  </button>
                </div>

              </div>

            </div>
            <button class="btn btn-primary">Add To Cart</button>
            <button class="btn btn-warning ml-2">Buy Now</button>

          </div>
        </main>
      </div>
    </div>
  </section>
