<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/image-uploader/2.0.7/image-uploader.min.css"
/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/image-uploader/2.0.7/image-uploader.min.js"></script>

<style>
  div.product-image {
    position: relative;
    width: 40%;
    background-size: cover;
  }

  .btn {
    z-index: 2; /* or any value higher than other elements */
  }

  div.product-image img {
    width: 100%;
    height: auto;
  }

  .magnifier-lens {
    position: absolute;
    top: 0;
    left: 0;
    width: 200px;
    height: 200px;

    background-color: #ff980030;
    border: 0.1px solid var(--orange);
    opacity: 0;
  }

  .magnifier-lens:hover {
    cursor: zoom-in;
  }
  .magnifier-lens.active {
    opacity: 1;
  }

  .magnified-image {
    position: absolute;
    z-index: 2; /* or any value higher than other elements */
    top: 0;
    left: 0;
    width: 100%;
    height: 80vh;
    border: 2px solid #ff9800;
    transform: scale(0.5);
    opacity: 0;
  }

  .magnified-image.active {
    opacity: 1;
    transform: scale(1);
    image-rendering: crisp-edges;
    z-index: 3;
  }
  .modal {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: rgb(255, 255, 255);
      padding: 20px;
      text-align: center;
      max-width: 400px;
      /* Adjust the maximum width as needed */
      width: 100%;
      /* Ensure the width is responsive */
    }

    .close {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 20px;
      cursor: pointer;
    }

    .button-container {
      margin-top: 20px;
    }

    /* Style the buttons as needed */
    button {
      padding: 10px;
      margin: 0 10px;
      cursor: pointer;
    }
</style>
<title><%=ProductData.name  %></title>
<main class="py-0">
  <div class="container mt-md-4 mt-sm-5 pt-sm-5 pt-5 mt-4 pt-md-4">
    <div class="row">
      <aside class="col-lg-6">
        
        <img
          id="largeImage"
          style="
            width: 100%;
            height: 550px;
            max-height: 80vh;
            margin: auto;
            background-size: cover;
            -webkit-background-size: cover;
          "
          class="rounded-4 fit border product-image"
          src="/images/productImages/<%=ProductData.images[0] %>"
          data-image="/images/productImages/<%=ProductData.images[0] %>"
          data-color="<%=ProductData.variants.color %>"
        />
        
    
        <div class="magnifier-lens"></div>

        <div class="d-flex justify-content-evenly mt-3 mb-3 h-50 flex-wrap">
          <img
            width="150"
            height="150"
            class="rounded-2 border"
            src="/images/productImages/<%=ProductData.images[1] %>"
            data-image="/images/productImages/<%=ProductData.images[1] %>"
          />
          <img
            width="150"
            height="150"
            class="rounded-2 border"
            src="/images/productImages/<%=ProductData.images[2] %>"
            data-image="/images/productImages/<%=ProductData.images[2] %>"
          />
          <img
            width="150"
            height="150"
            class="rounded-2 border"
            src="/images/productImages/<%=ProductData.images[3] %>"
            data-image="/images/productImages/<%=ProductData.images[3] %>"
          />
        </div>
      </aside>

      <div class="col-lg-6" style="position: relative">
        <div class="magnified-image image-uploader"></div>

        <div class="ps-lg-3">
          <h5 class=" text-dark mt-5 mt-xl-0 mt-md-0">
            <%=ProductData.name %>
          </h5>

          <div class="d-flex flex-row my-3">
            <% if(ProductData.stock !==0) { %>
            <span class="text-success fw-bold ms-2"> In Stock </span>
            <% } else { %>
            <span class="text-danger fw-bold ms-2"> Out Of Stock </span>
            <% } %>
          </div>

          <div class="mb-3 d-flex">
            <span class="h4 me-3">
              Rs:<%= Number(ProductData.price - (ProductData.price *
              (ProductData.discount/100))).toLocaleString() %>
            </span>
            <span class="h5 fw-light text-danger me-3">
              <s> <%= ProductData.price %> </s>
            </span>
            <p class="card-text text-success mb-0">
              <%= ProductData.discount %>% off
            </p>
          </div>
              <div class="d-flex flex-row my-3">

                <%if(offers !=='undefined' ) {%>
                  <%offers.forEach(offer=>{%>



                    <%if(offer.offer===ProductData.category || offer.offer === ProductData.name) {%>
                      <span style="position: relative; z-index: 10px; font-size: 13px; float: right; font-size: 15px; color: green; text-shadow: 2px 2px 4px  grid-row-end;">
                        Special offer <%= offer.percentage %>% off
                      </span>
                      

                      <%} %>

                       <% })%>



                        <%} %>
          </div>
        </div>
        

        <div class="row mb-4 mt-1 justify-content-center ml-1">
          <div
            class="col-12 col-md-8 col-xl-8 col-xxl-8 d-flex justify-content-between flex-wrap w-100 text-center flex-md-nowrap flex-xxl-nowrap"
          >
            <a
              href="#"
              style="width: 500px; height: 60px"
              data-product-id="<%= ProductData._id %>"
              data-product-price="<%= Number(ProductData.price - (ProductData.price * (ProductData.discount / 100))) %>"
              class="btn btn-primary d-flex align-items-center justify-content-center me-2 mb-2 addToCartButton"
              >Add To Cart</a
            >
            <a
              style="width: 500px; height: 60px"
              class="btn btn-warning d-flex align-items-center justify-content-center mb-2"
              >Buy Now</a
            >
          </div>
        </div>

        <p class="font-weight-bold justify-content-between">Choose Color:</p>

        <div class="d-flex flex-wrap gap-3 mb-4">
          <% for (let i = 0; i < ProductData.variants.images.length && i < ProductData.variants.color.length; i++) { %>
            <div class="d-flex flex-column align-items-center">
              <a
                href="#"
                class="color-selector"
                data-color="<%= ProductData.variants.color[i] %>"
                data-image="/images/productImages/<%=ProductData.variants.images[i]%>"
              >
                <img
                  style="position: relative; z-index: 2"
                  width="50"
                  height="50"
                  src="/images/productImages/<%=ProductData.variants.images[i] %>"
                  alt=""
                />
              </a>
              <p><%=ProductData.variants.color[i] %></p>
            </div>
          <% } %>
        </div>
        

        <ul>
          <p class="font-weight-bold">About this item</p>
          <% var descriptionPoints=ProductData.description.split(/\.\s+/);
          descriptionPoints.forEach(function(point) { %>
          <li><%= point %></li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</main>

<!-- cart item added pop up -->
