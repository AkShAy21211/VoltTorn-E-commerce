<title>Settings | Profile</title>
<main>
  <div class="container">
    <div class="row d-flex justify-content-arround">
      <div class="setting-options  col-md-4 col-lg-4 col-xl-3 col-xxl-3  mb-2 min-height-div1 mb-md-4">
        <ul class="list-group " id="myList">
           <a class="options" href="/home/settings/profile"><li class="list-group-item inactive list-item">
              <i class="bi bi-person"></i> Profile
            </li></a> 
           <a  class="options" href="/home/settings/oders"><li class="list-group-item inactive list-item">
              <i class="bi bi-box"></i> Orders
            </li></a> 
            <a  class="options" href=""><li class="list-group-item inactive list-item">
              <i class="bi bi-cart"></i> Cart
            </li></a>
           <a   class="options" href=""><li class="list-group-item  inactive list-item">
              <i class="bi bi-heart"></i> Wishlist
            </li></a> 
           <a  class="options" href=""><li class="list-group-item  inactive list-item">
              <i class="bi bi-geo-alt"></i> Address
            </li></a> 
          </ul>
      </div>
      <div class="view-settings col-md-8 col-lg-8 col-xl-9 col-xxl-8 border min-height-div1 mb-md-4">
      <%if(typeof user !== 'undefined'){%>

    
        <!-- Profile Form -->
        <form action="/home/setting/edit-profile/<%=user._id%>" method="post" class="mb-3" enctype="multipart/form-data">
      
          <!-- Profile Image -->
          <div class="text-center mt-3 mb-3">
            <div class="profile-picture-container d-flex flex-column align-items-center">
              <img style="width: 150px; height: 150px; border-radius: 50%;" id="profileImagePreview" src="/images/userImages/<%=user.image  %>" alt="Profile Picture" class="image-fluid mb-2">
              <input type="file" class="form-control"  id="profileImage" name="image" style="display:contents;" accept="image/*">
              <label style="width: 250px; height: 40px;" for="profileImage" class="btn btn-outline-primary mt-2">Change</label>
            </div>
          </div>
      
          <!-- First Name and Last Name in the same row -->
          <div class="row mb-3">
            <div class="col-md-6">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="firstName" name="firstName" placeholder=" " multiple="/*" value="<%=user.first_name  %>">
                <label for="firstName" class="form-label">First Name</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="lastName" name="lastName" placeholder=" "value="<%=user.last_name  %>">
                <label for="lastName" class="form-label">Last Name</label>
              </div>
            </div>
          </div>
          
          <!-- Email and Mobile in the same row -->
          <div class="row mb-3">
            <div class="col-md-6">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" name="email" placeholder=" "value="<%=user.email %>">
                <label for="email" class="form-label">Email</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="mobile" name="mobile" placeholder=" "value="<%=user.mobile%>">
                <label for="mobile" class="form-label">Mobile</label>
              </div>
            </div>
          </div>
          
          <h5 class="p-1 fw-bold">Billing Address</h5>
          <div class="row mb-3">

          <% user.addresses.forEach((address, i) => { %>

          <%if(!user.addresses){%>
            <h6 class="p-1 text-info">No Address Found Please Add Your Belling Address At The Time Of Checkout.</h6>

          <%} else{%>


            <div class="col-md-6">
              <div class="form-floating mb-3">
                <div data-index="<%= i %>" class="mb-3">
                  <!-- Example addresses, you can replace these with dynamic data -->
                <div class="form-check mt-4 border rounded bg-light" style="height: 100px; display: flex; justify-content: space-between; align-items: center;">
                    <input class="form-check-input ml-1" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="ml-4 form-check-label" for="address1">
                        <div>
                            <strong>Address:</strong> <%= address.address %><br>
                           
                        </div>
                    </label>
                    <a style="cursor: pointer; float: right;" class="me-3 text-primary editAddressBtn" href="/home/setting/edit-profile/delete-address/<%=address._id  %>">Delete</a>
                  </div>
            </div>
    
              </div>
            </div>
                 
          <%}%>

          <%})  %>  
        </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Update Profile</button>
        </form>
        <%} else{%>


          <form class="blurry-form" action="" method="" class="mb-3">
      
            <!-- Profile Image -->
            <div class="text-center mt-3 mb-3">
              <div class="profile-picture-container d-flex flex-column align-items-center">
                <img style="width: 150px; height: 150px; border-radius: 50%;" id="profileImagePreview" src="" alt="Profile Picture" class="image-fluid mb-2">
                <input disabled type="" class="form-control"  id="profileImage" name="image" style="display:contents;" accept="image/*">
                <label  style="width: 250px; height: 40px;" for="profileImage" class="btn btn-outline-primary mt-2">Change</label>
              </div>
            </div>
        
            <!-- First Name and Last Name in the same row -->
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" readonly disabled id="firstName" name="firstName" placeholder=" " multiple="/*" value="">
                  <label for="firstName" class="form-label">First Name</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="" class="form-control"  readonly disabled id="lastName" name="lastName" placeholder=" "value="">
                  <label for="lastName" class="form-label">Last Name</label>
                </div>
              </div>
            </div>
            
            <!-- Email and Mobile in the same row -->
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="" class="form-control"  readonly disabled id="email" name="email" placeholder=" "value="">
                  <label for="email" class="form-label">Email</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating mb-3">
                  <input type="" class="form-control"  readonly disabled id="mobile" name="mobile" placeholder=" "value="">
                  <label for="mobile" class="form-label">Mobile</label>
                </div>
              </div>
            </div>
            
         
        
            <!-- Submit Button -->
            <button type="" disabled class="btn btn-primary">Update Profile</button>

          </form>
          <a style="text-align: center; color: white;padding: 10px;" href="/login" class="btn btn-primary login-button">Login</a>

        <%} %>
        <!-- JavaScript to handle file input change and update preview -->
       
      </div>
          </div>
  </div>
</main>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get all list items
    var listItems = document.querySelectorAll('#myList li');

    // Add click event listeners to each list item
    listItems.forEach(function(item) {
      item.addEventListener('click', function() {
        // Toggle the active state of the clicked item
        item.classList.toggle('active');

        // Deactivate all other items
        listItems.forEach(function(innerItem) {
          if (innerItem !== item) {
            innerItem.classList.remove('active');
          }
        });
      });
    });
  });
</script>
<script>
  const profileImageInput = document.getElementById('profileImage');
  const profileImagePreview = document.getElementById('profileImagePreview');

  profileImageInput.addEventListener('change', function () {
    const file = this.files[0];

    if (file) {
      const reader = new FileReader();

      reader.onload = function (e) {
        profileImagePreview.src = e.target.result;
      };

      reader.readAsDataURL(file);
    }
  });
</script>
