<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/css/verifyOTP.css">
<title>verify-OTP</title>

<main class="otp-box">
  <div class="d-flex justify-content-center align-items-center continer">
    <div class="card py-5 px-3">
      <h5 class="m-0">Email OTP  verification</h5>
      <span class="text-success"
        ><b>Enter the code we just sent on your email</b> </span>
        <% if (typeof message !== 'undefined') { %>
          <p><%= message %></p>
      <% } else if (typeof error !== 'undefined') { %>
          <p class="text-danger"><%= error %></p>
      <% } %>
      
     
      <form action="" method="post">
        <div class="d-flex flex-row mt-5">
          <input type="number" name="otp" class="form-control " autofocus="" />
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
      </form>
     
      <div class="text-center mt-5">
        <div id="countdown"></div>
        <div id="resend">
        <a class="font-weight-bold text-color cursor" onclick="resendOTP()">Resend</a>
      </div>
      </div>
    </div>
  </div>
</main>
<script src="js/OTPCountdown.js"></script>

<%- include('../layout/footer.ejs') %>
