<%- include('../layout/header.ejs') %>

<style>
  .card {
    max-height: 550px;
    max-width: 400px;
  }

  .card img {
    height: 230px;
  }
  .card-img-top {
    transition: transform 0.3s ease-in-out;
  }

   .card-img-top:hover {
    transform: scale(0.9); /* You can adjust the scale value for the desired zoom level */
  }
  .card-title {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px; /* Adjust the value based on your design */
  }
  #myCarousel .carousel-item {
    min-height: 350px;
    min-height: 450px; /* Minimum height for visibility */
}



</style>
<script>
  // Check if the user is blocked and show a pop-up message
   if (locals.userSessionData && locals.userSessionData.status === false) { 
    alert("You have been blocked by the admin");
    window.location.href = '/login';
  }
</script>

<title>VoltTron an online electronics shoping site</title>
<main >

  <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
      <% banner.forEach((banner, index) => { %>
        <div class="<%= index === 0 ? 'carousel-item active' : 'carousel-item' %>">
          <img height="400" data-ride="3000" data-slide="carsoul" class="d-block w-100" src="/images/bannerImages/<%= banner.image %>" alt="Banner <%= index + 1 %>">
        </div>
      <% }); %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  





    <div class="container ">
      <div class="row">
        <h3 class="p-3">Top Products</h3>
        <% ProductData.forEach(product => { %>
        <div class="col-md-6 col-lg-3 mb-lg mb-md-6 mb-sm-4 md-xs-3 col-12 mt-3">
          <!-- Use col-lg-3 to include four cards in one row -->
          <a href="/home/product/details/<%=product._id%>" class="text-decoration-none text-dark" >
          <div class="card h-100 border shadow rounded">
            <% for (let i = 0; i <= 0; i++) { %>
            <img
              style="margin-bottom: 5px"
              width="100px"
              height="300px"
              class="card-img-top"
              src="/images/productImages/<%= product.variants[0].images[0] %>"
              alt="Product Image <%= i + 1 %>"
            />
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">
                Price: <b>Rs:<%= Number(product.price - (product.price * (product.discount/100))).toLocaleString() %></b>
              </p>
              <p class="card-text text-success"> %<%= product.discount %> off</p>
            </div>
          </a>
            <div class="card-footer">
              <div class="d-flex justify-content-between">
                <p class="fw-bold">
                  <a href="#!" class="text-muted">
                    <%-product.category.category %>
                  </a>
                </p>
                <p class="small text-danger"><s>Rs<%= product.price %></s></p>
              </div>
              <div class="d-flex justify-content-between mb-2">
                <% if(product.stock !== 0) { %>
                <p class="text-muted mb-0">
                  Availablity: <span class="fw-bold text-success">In Stock</span>
                </p>
                <% } else { %>
                <p class="text-muted mb-0">
                  Available: <span class="fw-bold text-danger">Out Of Stock</span>
                </p>
                <% } %>
               
              </div>
            </div>
          </div>
       
        </div>
        <% }); %>
      </div>
    </div>
  </section>
  <section id="featured-brand" class="mb-5"> <!-- Add margin-bottom here -->
    <div class="container-fluid mt-5 mb-5">
      <div class="row">
        <h1 class="col-12 text-center" style="font-size: 30px;">Featured Brands</h1>
        <div class="col-sm-12 col-md-12 col-lg-12 d-flex flex-wrap justify-content-evenly mt-5">
  
          <img class="mb-3" style="width: 40px; height: 40px;" src="/images/apple.png" alt="">
          <img class="mb-3" style="width: 40px; height: 40px;" src="/images/hp.png" alt="">
          <img class="mb-3" style="width: 40px; height: 40px;" src="/images/dell.png" alt="">
          <img class="mb-3" style="width: 80px; height: 30px; margin-top: 10px;" src="/images/lenovo.png" alt="">
          <img class="mb-3" style="width: 100px; height: 30px; margin-top: 10px;" src="/images/samsung.png" alt="">
        </div>
      </div>
    </div>
  </main>

